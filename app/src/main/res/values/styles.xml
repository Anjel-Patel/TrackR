<?xml version="1.0" encoding="utf-8"?>

    <resources>

        <style name="h1">
            <item name="fontFamily">@font/inter_bold_700</item>
            <item name="android:textSize">34sp</item>
            <item name="android:letterSpacing">-0.01</item>
        </style>

        <style name="h2">
            <item name="fontFamily">@font/inter_bold_700</item>
            <item name="android:textSize">24sp</item>
            <item name="android:letterSpacing">-0.01</item>
        </style>

        <style name="h3">
            <item name="fontFamily">@font/inter_medium_500</item>
            <item name="android:textSize">20sp</item>
            <item name="android:letterSpacing">0</item>
        </style>

        <style name="body_1">
            <item name="fontFamily">@font/inter_regular_400</item>
            <item name="android:textSize">16sp</item>
            <item name="android:letterSpacing">0</item>
        </style>

        <style name="body_2">
            <item name="fontFamily">@font/inter_regular_400</item>
            <item name="android:textColor">@color/black_30</item>
            <item name="android:textSize">14sp</item>
            <item name="android:letterSpacing">0</item>
        </style>

        <style name="subtitle">
            <item name="fontFamily">@font/inter_semibold_600</item>
            <item name="android:textSize">16sp</item>
            <item name="android:letterSpacing">0</item>

        </style>

        <style name="caption_1">
            <item name="fontFamily">@font/inter_regular_400</item>
            <item name="android:textSize">14sp</item>
            <item name="android:letterSpacing">0.2</item>
        </style>

        <style name="caption_2">
            <item name="fontFamily">@font/inter_regular_400</item>
            <item name="android:textSize">10sp</item>
            <item name="android:letterSpacing">0.4</item>
        </style>

    <style name="button_primary">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter_semibold_600</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_primary</item>
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="android:textAppearance">@style/subtitle</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="input_field">
        <item name="android:textColorHint">@color/black_60</item>
        <item name="android:textColor">@color/black_60</item>
        <item name="android:background">@drawable/input</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAppearance">@style/body_2</item>
        <item name="fontFamily">@font/inter_regular_400</item>

    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/black_10</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
    </resources>
