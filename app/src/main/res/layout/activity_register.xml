<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Register">

    <TextView
        android:id="@+id/pageHeading"
        android:layout_width="218dp"
        android:layout_height="32dp"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal|top"
        android:text="Welcome to Trackr"
        android:textAppearance="@style/h2"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pageSubtitle"
        android:layout_width="268dp"
        android:layout_height="40dp"
        android:layout_marginTop="86dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="1sp"
        android:text="Manage your home inventory the smarter way!"
        android:textAppearance="@style/body_1"
        android:textColor="@color/black_60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:layout_marginTop="408dp"
        android:text="Register"
        style="@style/button_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/facebookButton"
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:layout_marginTop="516dp"
        android:drawableLeft="@drawable/ic_facebook"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        style="@style/button_primary"
        android:text="Sign up with Facebook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/login_callout"
        android:layout_width="211dp"
        android:layout_height="20dp"
        android:layout_marginBottom="32dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="Already have an account?"
        android:textAppearance="@style/body_2"
        android:textColor="@color/primary_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="328dp"
        android:layout_height="20dp"
        android:layout_marginBottom="144dp"
        android:src="@drawable/drawable_or"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/or"
        android:layout_width="32dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="false"
        android:layout_marginBottom="144dp"
        android:gravity="center_horizontal|center_vertical"
        android:lineSpacingExtra="-0.4dp"
        android:text="OR"
        android:textAppearance="@style/caption_1"
        android:textColor="@color/black_60"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/PersonName"
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/input"
        android:ems="10"
        android:gravity="center_vertical"
        android:inputType="textPersonName"
        android:textAppearance="@style/body_2"
        android:padding="12dp"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:layout_marginTop="212dp"
        android:ems="10"
        android:background="@drawable/input"
        android:inputType="textEmailAddress"
        android:text="Email"
        android:textAppearance="@style/body_2"
        android:padding="12dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Phone"
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:layout_marginTop="272dp"
        android:ems="10"
        android:background="@drawable/input"
        android:inputType="textPhonetic"
        android:text="Phone"
        android:textAppearance="@style/body_2"
        android:padding="12dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/profession_dropdown"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="332dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>