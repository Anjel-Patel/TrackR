<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".emailVerification">

    <TextView
        android:id="@+id/textView"
        android:layout_width="230dp"
        android:layout_height="32dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Email Verification"
        android:textAppearance="@style/h2"
        android:textColor="@color/primary_black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="299dp"
        android:layout_height="40dp"
        android:layout_marginTop="96dp"
        android:text="An email containing a verification link has been sent to you."
        android:gravity="center"
        android:textAppearance="@style/body_1"
        android:textColor="@color/black_60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:layout_width="298dp"
        android:layout_height="298dp"
        android:layout_marginTop="180dp"
        android:src="@drawable/mail_illustration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="299dp"
        android:layout_height="20dp"
        android:layout_marginTop="560dp"
        android:text="Waiting for verification..."
        android:gravity="center"
        android:textAppearance="@style/body_1"
        android:textColor="@color/black_60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>