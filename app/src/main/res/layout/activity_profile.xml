<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/page_Heading"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/profile_back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_back"
            android:clipToOutline="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="75dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="52dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:text="Profile"
            android:textAppearance="@style/h2"
            android:gravity="top"
            />
    </RelativeLayout>

    <View
        android:id="@+id/divider1"
        style="@style/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/page_Heading" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginTop="24dp"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/page_Heading"
        app:srcCompat="@drawable/ic_profile_vector" />

    <View
        android:id="@+id/divider2"
        style="@style/divider"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView3" />

    <LinearLayout
        android:id="@+id/username_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/divider2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:text="Name:"
            android:textAppearance="@style/h2"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="4dp"
            android:text="@string/username"
            android:textColor="@color/primary_black"
            android:textAppearance="@style/body_2"
            />
    </LinearLayout>

    <View
        android:id="@+id/divider3"
        style="@style/divider"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/username_display"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/useremail_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/divider3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:text="Email:"
            android:textAppearance="@style/h2"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="4dp"
            android:text="@string/useremail"
            android:textColor="@color/primary_black"
            android:textAppearance="@style/body_2"
            />
    </LinearLayout>

    <View
        android:id="@+id/divider4"
        style="@style/divider"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/useremail_display"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/userphonenumber_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/divider4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:text="Phone:"
            android:textAppearance="@style/h2"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="4dp"
            android:text="@string/userphonenumber"
            android:textColor="@color/primary_black"
            android:textAppearance="@style/body_2"
            />
    </LinearLayout>

    <View
        android:id="@+id/divider5"
        style="@style/divider"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/userphonenumber_display"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/logout_button"
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/logout_button_drawable"
        android:letterSpacing="0.075"
        android:text="Logout"
        android:textAllCaps="false"
        android:textAppearance="@style/body_1"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>