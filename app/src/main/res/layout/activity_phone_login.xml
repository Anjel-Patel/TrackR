<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/phone_login_layout"
    android:background="@color/white">

    <TextView
        android:id="@+id/pageHeading"
        android:layout_width="218dp"
        android:layout_height="32dp"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal|top"
        android:text="Welcome to Trackr"
        android:textAppearance="@style/h2"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pageSubtitle"
        android:layout_width="268dp"
        android:layout_height="40dp"
        android:layout_marginTop="86dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="1sp"
        android:text="Login with Phone No."
        android:textAppearance="@style/body_1"
        android:textColor="@color/black_60"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Phone"
        style="@style/input_field"
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:layout_marginTop="152dp"
        android:hint="Phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/OTPlinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SendOTP">

        <EditText
            android:id="@+id/otp_phone_1"
            style="@style/input_field"
            android:layout_width="54dp"
            android:layout_height="72dp"
            android:layout_margin="2dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="34dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/otp_phone_2"
            style="@style/input_field"
            android:layout_width="54dp"
            android:layout_height="72dp"
            android:layout_margin="2dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="34dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/otp_phone_3"
            style="@style/input_field"
            android:layout_width="54dp"
            android:layout_height="72dp"
            android:layout_margin="2dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="34dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/otp_phone_4"
            style="@style/input_field"
            android:layout_width="54dp"
            android:layout_height="72dp"
            android:layout_margin="2dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="34dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/otp_phone_5"
            style="@style/input_field"
            android:layout_width="54dp"
            android:layout_height="72dp"
            android:layout_margin="2dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="34dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/otp_phone_6"
            style="@style/input_field"
            android:layout_width="54dp"
            android:layout_height="72dp"
            android:layout_margin="2dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="34dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <TextView
        android:id="@+id/error_message_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:text="Incorrect OTP"
        android:textAppearance="@style/body_2"
        android:textColor="@color/error_red"
        app:layout_constraintTop_toBottomOf="@id/OTPlinearLayout"
        app:layout_constraintStart_toStartOf="@id/OTPlinearLayout"/>

    <Button
        android:id="@+id/SendOTP"
        style="@style/button_primary"
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:text="Send OTP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Phone" />

    <Button
        android:id="@+id/verify_otp_button"
        style="@style/button_primary"
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:layout_marginTop="44dp"
        android:text="Verify OTP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OTPlinearLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>